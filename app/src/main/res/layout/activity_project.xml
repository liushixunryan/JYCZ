<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/in_nav_bar"
                layout="@layout/nav_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_tv"
                    android:gravity="center"
                    android:text="车辆信息"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/carData_tv"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="3"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_tv"
                    android:gravity="center"
                    android:text="订单数量"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/indentNum_tv"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@color/bg_green"
                    android:gravity="center"
                    android:textColor="@color/white"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_tv"
                    android:gravity="center"
                    android:text="总箱数"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/zxs_tv"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_tv"
                    android:gravity="center"
                    android:text="已扫总箱数"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/yszxs_tv"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_tv"
                    android:gravity="center"
                    android:text="未扫箱数"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wsxs_tv"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/xui_config_bg_edittext">

                    <EditText
                        android:id="@+id/et_smxm"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_edittext"
                        android:hint="扫描箱码或托码号"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/btn_tj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#008080"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@color/white"
                     android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="当前扫描条码(箱码/托码号)" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <TextView
                android:id="@+id/xmtmh_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:gravity="center"
                android:textColor="@color/common_red"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="对应订单目的地" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <TextView
                android:id="@+id/mdd_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:gravity="center"
                android:textColor="@color/common_text_black"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="扫码类型" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="箱数" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="委托单号" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/smlx_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xs_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bg_green"
                    android:gravity="center"
                    android:textColor="@color/white"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wtdh_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="2"
                    android:background="@color/bg_green"
                    android:gravity="center"
                    android:textColor="@color/white"
                     android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="扫码状态" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <LinearLayout
                android:id="@+id/iswarn_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iswarn_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:src="@mipmap/warn" />

                </LinearLayout>

                <TextView
                    android:id="@+id/iswarn_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black"
                    android:textSize="@dimen/sp_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/qrxcwc_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_r32"
                    android:paddingVertical="0dp"
                    android:text="确认卸车完成"
                    android:textColor="@color/common_white"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/bdtmbq_btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_r32"
                    android:paddingVertical="0dp"
                    android:text="补打条码标签"
                    android:textColor="@color/common_white"
                    android:textSize="18dp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</layout>