<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include
                android:id="@+id/in_nav_bar"
                layout="@layout/nav_bar" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:text="库区"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kq_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cxzdkq_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@color/bg_green"
                    android:gravity="center"
                    android:text="重新指定库区"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:text="整托件数"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/zjts_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:hint="请输入"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="0"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/sctm_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:background="@color/bg_green"
                    android:gravity="center"
                    android:text="生成托码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="托码" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <TextView
                android:id="@+id/tm_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:gravity="center"
                android:textColor="@color/common_text_black"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="请在下方扫描整托所有箱码"
                android:textColor="@color/common_text_black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/xui_config_bg_edittext">

                    <EditText
                        android:id="@+id/et_smtm"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_edittext"
                        android:hint="扫描托码"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/btn_tj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#008080"
                    android:gravity="center"
                    android:text="添加"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="当前扫描条码(箱码)" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <TextView
                android:id="@+id/xmtmh_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:gravity="center"
                android:textColor="@color/common_red"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="对应订单目的地" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <TextView
                android:id="@+id/mdd_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:gravity="center"
                android:textColor="@color/common_text_black"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/common_bg_gray4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="对应订单收货人信息" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:text="收货人" />

                <TextView
                    android:id="@+id/shr_tv"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:text="收货单位" />

                <TextView
                    android:id="@+id/shdw_tv"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_select_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/qrptwc_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="2"
                    android:background="@drawable/shape_blue_r32"
                    android:paddingVertical="0dp"
                    android:text="确认拼托完成"
                    android:textColor="@color/common_white"
                    android:textSize="15dp"
                    android:visibility="invisible" />


                <Button
                    android:id="@+id/bdxm_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_r32"
                    android:paddingVertical="0dp"
                    android:text="补打箱码"
                    android:textColor="@color/common_white"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>