<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/in_nav_bar"
            layout="@layout/nav_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xui_config_bg_edittext"
                android:gravity="center"
                android:text="厂家"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/xui_config_bg_edittext">

                <cn.ryanliu.jycz.view.MaterialSpinner
                    android:id="@+id/et_cj"
                    style="@style/Material.SpinnerStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:hint="请选择" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xui_config_bg_edittext"
                android:gravity="center"
                android:text="型号"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/xui_config_bg_edittext">

                <EditText
                    android:id="@+id/et_ztjs"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="2dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="14sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/btn_cx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#008080"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/enguneoil_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <Button
            android:id="@+id/btn_printtm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll_pwd"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_blue_r32"
            android:paddingVertical="0dp"
            android:text="打印托码"
            android:textColor="@color/common_white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ll_pwd"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_blue_r32"
            android:paddingVertical="0dp"
            android:text="关  闭"
            android:textColor="@color/common_white"
            android:textSize="18dp" />
    </LinearLayout>
</layout>