<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/in_nav_bar"
                layout="@layout/nav_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:padding="@dimen/dp_12"
                    android:text="卸车完成\n时间段" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/xui_config_bg_edittext"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/et_xcwcsjd1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:background="@drawable/bg_edittext"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:hint="请选择"
                            android:lines="1"
                            android:maxLines="1"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/xui_config_bg_edittext"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/et_xcwcsjd2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="1dp"
                            android:background="@drawable/bg_edittext"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:hint="请选择"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLines="1"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="扫描人" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/xui_config_bg_edittext"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_smr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/bg_edittext"
                        android:gravity="center"
                        android:hint="请输入"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="车牌号" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/xui_config_bg_edittext"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_cph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/bg_edittext"
                        android:gravity="center"
                        android:hint="请输入"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="司机姓名" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/xui_config_bg_edittext"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_sjxm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/bg_edittext"
                        android:gravity="center"
                        android:hint="请输入"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="托码" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/xui_config_bg_edittext"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_tm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/bg_edittext"
                        android:gravity="center"
                        android:hint="请输入"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="箱码" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/xui_config_bg_edittext"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_xm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/bg_edittext"
                        android:gravity="center"
                        android:hint="请输入"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="目的地" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/xui_config_bg_edittext"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/et_mdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="1dp"
                        android:background="@drawable/bg_edittext"
                        android:gravity="center"
                        android:hint="请输入"
                        android:lines="1"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:padding="@dimen/dp_10"
                    android:text="订单状态" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/xui_config_bg_edittext"
                    android:gravity="center">

                    <cn.ryanliu.jycz.view.MaterialSpinner
                        android:id="@+id/et_ddzt"
                        style="@style/Material.SpinnerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:hint="请选择" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="装卸车扫描总箱数汇总"
                android:textColor="@color/common_text_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:text="当日卸车扫描总箱数"
                    android:textColor="@color/common_text_black" />

                <TextView
                    android:id="@+id/drxcsm_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:text="昨日卸车扫描总箱数"
                    android:textColor="@color/common_text_black" />

                <TextView
                    android:id="@+id/zrxcsm_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_gray_tv"
                    android:gravity="center"
                    android:textColor="@color/common_text_black" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_select"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_blue_r32"
                android:paddingVertical="0dp"
                android:text="查询"
                android:textColor="@color/common_white"
                android:textSize="18dp" />


        </LinearLayout>
    </ScrollView>
</layout>