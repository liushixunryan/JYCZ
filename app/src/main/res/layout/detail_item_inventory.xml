<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vg_ticket1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#027db4"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盘点时间："
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pdsj_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盘点人"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pdr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盘点区域："
                    android:textColor="@color/common_text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pdqy_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_text_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统库存数量："
                    android:textColor="@color/common_text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/xtkcsl_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_text_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盘点库存数量："
                    android:textColor="@color/common_text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pdkcsl_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/common_text_black" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_pdxmmx"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/shape_green_small_btn"
                android:paddingVertical="0dp"
                android:text="盘点箱码明细"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp_8" />

            <Button
                android:id="@+id/btn_pdcymx"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/dp_3"
                android:background="@drawable/shape_green_small_btn"
                android:paddingVertical="0dp"
                android:text="盘点差异明细"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp_8" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/common_bg_gray4" />

</LinearLayout>
